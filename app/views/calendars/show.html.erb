<div class="date">
  <% unless @calendar == Calendar.first %>
  <%= link_to '<', @calendar.previous %>
  <% end %>
  <%= @calendar.created_at.to_date %>
  <% if @calendar.last.created_at.to_date < Date.today %>
  <%= link_to '>', new_calendar_path %>
  <% else %>
  <% unless @calendar.next.nil? %>
  <%= link_to '>', @calendar.next %>
  <% end %>
  <% end %>
</div>
<div class="title">
  <%= @calendar.name %>
</div>
<div class="content">
  <ul>
	<li>
      <%= link_to '+ new', new_calendar_list_path(@calendar) %>
    </li>
    <% unless @calendar.lists.empty? %>
    <% for list in @lists %>
    <li>
      <%= list.content %>
    </li>
    <% end %>
    <% end %>
  </ul>
</div>